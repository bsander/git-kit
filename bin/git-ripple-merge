#!/bin/bash -eE

ripple-step () {
  local HEAD
  HEAD=$(git current-branch)
  while read -r TARGET; do
    echo "=== Ripple-merge:" "$HEAD" "->" "$TARGET";
      ( set -x;
        git checkout "$TARGET" &&
        git merge --log "$HEAD"
      ) &&
      ripple-step &&
      git checkout "$HEAD"
  done < <(git config --get-all "branch.${HEAD}.ripple")
}

ripple-step
