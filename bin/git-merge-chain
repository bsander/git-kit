#!/bin/bash -eE

chain-merge () {
  local HEAD
  HEAD=$(git current-branch)
  while read -r TARGET; do
    echo "=== Ripple-merge:" "$HEAD" "->" "$TARGET";
      ( set -x;
        git checkout "$TARGET" &&
        git merge --log "$HEAD"
      ) &&
      chain-merge &&
      git checkout "$HEAD"
  done < <(git config --get-all "branch.${HEAD}.mergechain")
}

chain-merge
